<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deseos">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:outlineProvider="paddedBounds"
                app:cardCornerRadius="4dp"
                app:contentPadding="6dp"
                app:contentPaddingBottom="6dp"
                app:contentPaddingLeft="6dp"
                app:contentPaddingRight="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:layout_weight="@android:dimen/app_icon_size"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada2" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="El final del viaje"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:text="Silvia de Holanda - autora del best-seller Amanecer"
                        android:textAlignment="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro2"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:pointerIcon="none"
                android:textAlignment="center"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Hasta que el verano se acabe"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="Connor Hamilton"
                        android:textAlignment="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada1" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="El camino de la guerrera"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="La guerrera en su camino - Herrera "
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro2"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:textAlignment="center"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/libro" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Cada historia cuenta"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="Varios autores - editorial Kurere"
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro2"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:textAlignment="center"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada3" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Derecho  de piso"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="Guia de supervivencia en la empresa"
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:longClickable="true"
        android:visibility="visible"
        app:addElevationShadow="true"
        app:backgroundTint="#FF5722"
        app:buttonGravity="bottom"
        app:fabAlignmentMode="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextColor="#050505" />

</androidx.constraintlayout.widget.ConstraintLayout>