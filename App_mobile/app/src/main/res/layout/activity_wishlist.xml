<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deseos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Menu"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star"
            tools:src="@drawable/menu" />

        <SearchView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/Libros"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star"
            tools:src="@drawable/baseline_menu_book_24" />

        <ImageButton
            android:id="@+id/Cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@android:drawable/btn_star"
            android:visibility="visible"
            tools:src="@drawable/baseline_account_circle_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="70dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/Libro1"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:pointerIcon="none"
                android:textAlignment="center"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="123dp"
                        android:layout_weight="@android:dimen/app_icon_size"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada2" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="El final del viaje"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:text="Silvia de Holanda - autora del best-seller Amanecer"
                        android:textAlignment="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro2"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:pointerIcon="none"
                android:textAlignment="center"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Hasta que el verano se acabe"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="Connor Hamilton"
                        android:textAlignment="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro3"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:pointerIcon="none"
                android:textAlignment="center"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada1" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="El camino de la guerrera"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="La guerrera en su camino - Herrera "
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro4"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:pointerIcon="none"
                android:textAlignment="center"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/libro" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Cada historia cuenta"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="Varios autores - editorial Kurere"
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Libro5"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:pointerIcon="none"
                android:textAlignment="center"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/portada3" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="404dp"
                        android:layout_height="31dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Derecho  de piso"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="399dp"
                        android:layout_height="38dp"
                        android:text="Guia de supervivencia en la empresa"
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="43dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:paddingStart="2dp"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="2dp"
                android:src="@android:drawable/btn_star"
                tools:src="@drawable/menu" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:longClickable="true"
        android:visibility="visible"
        app:addElevationShadow="true"
        app:backgroundTint="#FF5722"
        app:buttonGravity="bottom"
        app:fabAlignmentMode="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextColor="#050505" />

</androidx.constraintlayout.widget.ConstraintLayout>